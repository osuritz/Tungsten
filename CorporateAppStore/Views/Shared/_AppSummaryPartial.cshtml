@model CorporateAppStore.Models.App

<div class="app-summary">
    @*<img src="http://placehold.it/72x72" alt="@Model.Name" />*@
    <img src="@Url.Action("AppIcon", "home", new { id = Model.Filename, version = Model.Version })" alt="@Model.Name" />
    <a href="@Model.GetDownloadManifestUri(this.Url)">@Model.Name</a>
    <span class="version">Version @Model.ShortVersion</span>
</div>            
