@model CorporateAppStore.Models.AppCollection
@using CorporateAppStore.Models

@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/_RightAccessoryColumnLayout.cshtml";
    ViewBag.HeaderClass = "jumbotron masthead";
}

@section ContentHeader {
    <h1>Corporate App Store</h1>
    <p>Your gateway to the company's internal apps and client demos.</p>
}

@section RightContent {
    <section>
    <h3>Quick Links</h3>
    <ul>
        <li><a href="#">Quick Link #1</a></li>
        <li><a href="#">Quick Link #2</a></li>
        <li><a href="#">Quick Link #3</a></li>
        <li><a href="#">Quick Link #4</a></li>
        <li><a href="#">Quick Link #5</a></li>
    </ul>
    </section>
}

<div class="app-group">
<h2>iOS</h2>
@if (Model.Count == 0)
{
<div>There are no iOS apps yet.</div>
}
else
{

    <ul class="app-list ios thumbnails">
    @foreach (App app in Model)
    {
        <li class="span2">
            <div class="app-summary">
                @Html.Partial("_AppSummaryPartial", app)
            </div>            
        </li>
    }
    </ul>
}
</div>
